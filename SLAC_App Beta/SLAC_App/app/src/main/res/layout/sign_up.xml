<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/righteous"
        android:text="Sign Up"
        android:textColor="#000000"
        android:gravity="left"
        android:textSize="40sp" />
    

    <TextView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/enter_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup"
        android:text="Enter your E-mail ID"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="238dp" />

    <EditText xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/edittext_email"
        android:layout_below="@+id/enter_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Example: someone@gmail.com"
        android:textSize="20sp"
        />

    <TextView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/enter_pw"
        android:layout_below="@+id/edittext_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your password"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="365dp"
        />

    <EditText
        android:id="@+id/edittext_pw"
        android:layout_below="@+id/enter_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/enter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name:"
        android:layout_below="@+id/edittext_pw"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/edittext_name"
        android:layout_below="@+id/enter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Personal name/name of the organisation"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/enter_org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Whether you are an individual or you represent a NGO:"
        android:layout_below="@+id/edittext_name"
        android:textSize="27sp"
        />
    
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_org">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NGORadio"
            android:text = "NGO"
            android:textSize="25sp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DonorRadio"
            android:text="Individual"
            android:textSize="25sp"/>
    </RadioGroup>


</RelativeLayout>